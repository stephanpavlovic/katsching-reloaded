= form_with model: transaction, url: url, class: 'Form', data: { 'turbo-frame': '_top' } do |f|
  .Flex
    .Flex-item
      .MarginBottomSmall= f.label :amount, class: 'Label'
      .MarginBottom= f.number_field :amount, value: transaction.amount&.abs&.to_f, class: 'Input asMain', placeholder: '0.00', step: 0.01, min: 0.01, data: { controller: 'auto-focus' }, required: true
    .Flex-item
      %label.CheckboxLabel
        = check_box_tag :outgoing, true, transaction.outgoing?, class: 'Checkbox', data: { controller: 'toggle' }
        = t('.outgoing')

  .MarginBottomSmall= f.label :category, class: 'Label'
  .MarginBottom= f.select :category, options_for_select(category_options, transaction.category), {}, class: 'Select'

  .MarginBottomSmall= f.label :name, class: 'Label'
  .MarginBottom= f.text_field :name, class: 'Input'

  .MarginBottomSmall= f.label :date, class: 'Label'
  .MarginBottom= f.date_field :date, class: 'Input'

  = f.submit t('.submit'), class: 'Button'
